# ============================================================
# Sentinel Worker 환경변수 설정 (Railway Cron Job용)
# ============================================================

# === OpenAI & Caia Assistant ===
OPENAI_API_KEY=sk-...your-openai-api-key...
CAIA_ASSISTANT_ID=asst_...your-assistant-id...
CAIA_THREAD_ID=thread_...your-thread-id...
CAIA_PUSH_MODE=telegram

# === Telegram Bot ===
TELEGRAM_BOT_TOKEN=123456789:AAA...your-bot-token...
TELEGRAM_CHAT_ID=123456789

# === Hub Connector ===
HUB_URL=https://connector-hub-production.up.railway.app/bridge/ingest
CONNECTOR_SECRET=sentinel_20250818_abcd1234

# === Sentinel API ===
SENTINEL_BASE_URL=https://your-sentinel-api-url.railway.app

# === Market Watcher 설정 ===
WATCH_INTERVAL_SEC=1800
WATCHER_STATE_PATH=./market_state.json
DEDUP_WINDOW_MIN=30
USE_PROXY_TICKERS=true

# === 시장 데이터 프로바이더 ===
DATA_PROVIDERS=alphavantage,yfinance,yahoo
ALPHAVANTAGE_API_KEY=your-alphavantage-api-key
YF_ENABLED=true

# === 전송 모드 ===
SEND_MODE=on_change
BRIDGE_MODE=hub
ALIGN_SLOTS=true

# === 볼린저 밴드 설정 ===
BOLL_K_SIGMA=2.0
BOLL_WINDOW=20

# === DB증권 API ===
DBSEC_ENABLE=true
DB_API_BASE=https://openapi.dbsec.co.kr:8443
DB_APP_KEY=your-db-app-key
DB_APP_SECRET=your-db-app-secret
DB_FUTURES_CODE=101C6000
DB_SCOPE=oob

# === K200 선물 체크 설정 ===
K200_CHECK_INTERVAL_MIN=30
FORCE_MARKET_OPEN=false

# === VIX 필터 ===
VIX_FILTER_THRESHOLD=0.6

# === 로깅 ===
LOG_LEVEL=INFO
